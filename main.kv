            elevation:0.5
            on_release: 
                root.manager.current = 'barbeiros'
                root.manager.transition.direction = 'left'
        MDFillRoundFlatButton:
            text: 'Agendar'
            md_bg_color: '#403B38'
            text_color: '#A97D56'
            pos_hint: {'center_x': 0.25, 'center_y': 0.09}
            size_hint_x: .2
            elevation:0.5
            on_release: 
                root.manager.current = 'agendamento'
                root.manager.transition.direction = 'left'
        MDFillRoundFlatButton:
            text: 'Localização'
            md_bg_color: '#403B38'
            text_color: '#A97D56'
            pos_hint: {'center_x': 0.7, 'center_y': 0.08}
            size_hint_x: .2
            elevation:0.5
            on_release: 
                root.manager.current = 'localização'
                root.manager.transition.direction = 'left'
        MDFillRoundFlatButton:
            text: 'Sair'
            md_bg_color: '#403B38'
            text_color: '#A97D56'
            pos_hint: {'center_x': 0.8, 'center_y': 0.728}
            size_hint_x: .2
            elevation: 0.5
            on_release:
                root.logout()

