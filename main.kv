                allow_stretch: True
                keep_ratio: False
        MDLabel:
            id: username_label
            text: ""
            font_style: "Body1"
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1  # preto
            font_name: "LexendExa.ttf"
            pos_hint: {'center_x': 0.6, 'center_y': 0.728} 
        MDFillRoundFlatButton:
            text: 'Serviços'
            md_bg_color: '#403B38'
            text_color: '#A97D56'
            pos_hint: {'center_x': 0.25, 'center_y': 0.41}
            size_hint_x: .2
            elevation:0.5
