<FirstScreen>:
    name: 'primeira tela'
    MDFloatLayout:
        MDCard:
            style: 'filled'
            size_hint: (1, 1)    
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            FitImage:
                source: 'alphababerprimeiratela.jpg'
                allow_stretch: True
                keep_ratio: False
    MDFillRoundFlatButton:
        text: 'Entrar'
        md_bg_color: '#A97D56'
        text_color: '#403B38'
        pos_hint: {'center_x': 0.5, 'center_y': 0.2}
        size_hint_x: .6
        elevation:0
        on_release: 
            root.manager.current = 'tela de login'
            root.manager.transition.direction = 'left'

<LoginScreen>:
    name: 'tela de login'
    MDFloatLayout:
        MDCard:
            style: 'filled'
            size_hint: (1, 1)    
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            FitImage:
                source: 'teladelogin.jpg'
                allow_stretch: True
                keep_ratio: False
    MDTextField:
        id: login_email
        hint_text: 'Email'
        mode: 'round'
        pos_hint: {'center_x': 0.5, 'center_y': 0.54}
        icon_right: 'mail'
        size_hint_x: .8
    MDTextField:
        id: login_password
        hint_text: 'Senha'
        mode: 'round'
        pos_hint: {'center_x': 0.5, 'center_y': 0.4}
        size_hint_x: .8
        icon_right: 'lock'
        password: True
    MDFillRoundFlatButton:
        text: 'Acessar'
        md_bg_color: '#403B38'
        text_color: '#A97D56'
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        size_hint_x: .6
        elevation:0
        on_release: 
            root.login_user()
    MDTextButton:
        text: 'Não tem uma conta? [u]Cadastre-se.[/u]'
        text_color: '#A97D56'
        bold: True
        markup: True
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y': 0.09}
        font_size: dp(13)
        size_hint_x: .8
        on_release: 
            root.manager.current  = 'tela de cadastro'
            root.manager.transition.direction = 'left'

<RegisterScreen>:
    name: 'tela de cadastro'
    MDFloatLayout:
        MDCard:
            style: 'filled'
            size_hint: (1, 1)    
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            FitImage:
                source: 'teladecadastro.jpg'
                allow_stretch: True
                keep_ratio: False
        MDTextField:
            id: username_field
            hint_text: 'Nome'
            mode: 'round'
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            icon_right: 'account'
            size_hint_x: .8
        MDTextField:
            id: telefone_field
            hint_text: 'Telefone'
            mode: 'round'
            pos_hint: {'center_x': 0.5, 'center_y': 0.52}
            size_hint_x: .8
            icon_right: 'phone'
        MDTextField:
            id: email_field
            hint_text: 'Email'
            mode: 'round'
            pos_hint: {'center_x': 0.5, 'center_y': 0.44}
            size_hint_x: .8
            icon_right: 'mail'
        MDTextField:
            id: password_field
            hint_text: 'Senha'
            mode: 'round'
            pos_hint: {'center_x': 0.5, 'center_y': 0.36}
            size_hint_x: .8
            icon_right: 'lock'
            password: True
        MDFillRoundFlatButton:
            text: 'Cadastrar'
            md_bg_color: '#403B38'
            text_color: '#A97D56'
            pos_hint: {'center_x': 0.5, 'center_y': 0.25}
            size_hint_x: .6
            elevation:0
            on_release:
                root.register_user() 
        MDTextButton:
            text: 'Já tem uma conta? [u]Faça login.[/u]'
            text_color: '#A97D56'
            bold: True
            markup: True
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.04}
            font_size: dp(13)
            size_hint_x: .8
            on_release: 
                root.manager.current  = 'tela de login'
                root.manager.transition.direction = 'right'

<MainScreen>:
    name: 'tela principal'
    MDFloatLayout:
        MDCard:
            style: 'filled'
            size_hint: (1, 1)    
