<Agendamento>:
    name: 'agendamento'
    FloatLayout:
        MDCard:
            style: 'filled'
            size_hint: (1, 1)    
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            FitImage:
                source: 'agendamento.jpg'
                allow_stretch: True
                keep_ratio: False
        MDIconButton:
            icon: 'arrow-left'
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.05, 'center_y': 0.97}
            on_release: 
                root.manager.current = 'tela principal'
                root.manager.transition.direction = 'right'
        MDRaisedButton:
            id: menu_
            text: "Serviços"
            md_bg_color: '#403B38'
            text_color: '#A97D56'
            pos_hint: {'center_x': 0.5, 'center_y': 0.45}
            size_hint_x: .55
            icon_right: 'arrow-down-drop-circle'
            on_release: 
                root.dropdown_()
        MDLabel:
            id: preco_label
            text: "Total: R$ 0.00"
            halign: "center"
            pos_hint: {'center_x': 0.5, 'center_y': 0.38}
            font_style: 'H6'
            theme_text_color: 'Custom'
            text_color: 1, 0.49, 0.34, 1        
        MDTextField:
            id: data_field
            hint_text: "Data dia/mes/ano sem limites"
            helper_text: "Insira uma data válida em dd/mm/aaaa"
            validator: "date"
            date_format: "dd/mm/yyyy"
            pos_hint: {'center_x': 0.5, 'center_y': 0.53}
            size_hint_x: .55
            icon_right: 'calendar'
            text_color: 1, 0.49, 0.34, 1
        MDRaisedButton:
            text: "Agendar"
            md_bg_color: '#403B38'
            text_color: '#A97D56'
            pos_hint: {'center_x': 0.7, 'center_y': 0.098}
            size_hint_x: .3
            on_release: 
                app.root.get_screen('agendamento').agendar()
        MDRaisedButton:
            text: "Remover Serviço"
            md_bg_color: '#403B38'
            text_color: '#A97D56'
            pos_hint: {'center_x': 0.3, 'center_y': 0.098}
            size_hint_x: .3
            on_release: 
                app.root.get_screen('agendamento').remover_servico()

